                        android:id="@+id/BoundaryWall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.4"
                        android:gravity="center_vertical"
                        android:text="Boundary Wall height"
                        android:textColor="@color/blackMedium"
                        android:textSize="@dimen/_16dp" />

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2dp"
                        android:layout_weight="0.6"
                        android:gravity="center"
                        android:minHeight="@dimen/_28dp"
                        app:cardBackgroundColor="@android:color/white">

                       <com.apitechnosoft.ipad.component.FNEditText
                            android:id="@+id/etboundryheight"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:background="@android:color/white"
                            android:gravity="left|center_vertical"
                            android:hint="Enter Boundary Wall Height"
                            android:inputType="number"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_16dp" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_4dp"
                    android:minHeight="@dimen/_30dp"
                    android:orientation="horizontal">

                   <com.apitechnosoft.ipad.component.ASTTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.4"
                        android:gravity="center_vertical"
                        android:text="Type Boundary wall"
                        android:textColor="@color/blackMedium"
                        android:textSize="@dimen/_16dp" />

                    <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2dp"
                        android:layout_weight="0.6"
                        android:gravity="center"
                        android:minHeight="@dimen/_22dp"
                        app:cardBackgroundColor="@android:color/white">

                        <Spinner
                            android:id="@+id/typeBoundarywall"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:popupBackground="@color/white" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>


            </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_3dp"
        app:cardElevation="@dimen/_6dp">

        <Button
            android:id="@+id/btnSubmit"
            style="@style/DefaultButtonText"
            android:layout_width="@dimen/_210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_login"
            android:gravity="center"
            android:padding="10dp"    android:textSize="@dimen/_12dp"
            android:text="Submit" />
    </android.support.v7.widget.CardView>
</LinearLayout>
