<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.PersonalFragment">

<!--    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">

                    <com.apitechnosoft.ipad.component.ASTTextView
                        android:id="@+id/newFolder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ic"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/folder"
                        android:textSize="@dimen/_40dp" />

                    <com.apitechnosoft.ipad.component.ASTTextView
                        android:id="@+id/upFolder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:text="ic"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/folder"
                        android:textSize="@dimen/_40dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:layout_weight="0.5"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <com.apitechnosoft.ipad.component.ASTTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sort By"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/_14dp" />

                    <com.apitechnosoft.ipad.component.ASTTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:background="@drawable/border_layout_orange"
                        android:text="Newest"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14dp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/orange" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_height="wrap_content"
                android:background="@color/white" />
        </LinearLayout>
  <!--  </android.support.v4.widget.NestedScrollView>-->


</RelativeLayout>