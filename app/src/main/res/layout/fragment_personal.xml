<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.PersonalFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.apitechnosoft.ipad.component.ASTTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_2dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/border_layout_orange"
                    android:gravity="center"
                    android:padding="@dimen/_5dp"
                    android:text="Photos"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_14dp" />

                <com.apitechnosoft.ipad.component.ASTTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2dp"
                    android:layout_marginRight="@dimen/_2dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/border_layout_orange"
                    android:gravity="center"
                    android:padding="@dimen/_5dp"
                    android:text="Video"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_14dp" />

                <com.apitechnosoft.ipad.component.ASTTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2dp"
                    android:layout_marginRight="@dimen/_2dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/border_layout_orange"
                    android:gravity="center"
                    android:padding="@dimen/_5dp"
                    android:text="Music"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_14dp" />

                <com.apitechnosoft.ipad.component.ASTTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/border_layout_orange"
                    android:gravity="center"
                    android:padding="@dimen/_5dp"
                    android:text="Docs"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/uploadLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">

                    <com.apitechnosoft.ipad.component.ASTTextView
                        android:id="@+id/uploadIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="ic"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/_18dp" />

                    <com.apitechnosoft.ipad.component.ASTTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:gravity="center"
                        android:text="Upload New File"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/_12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/searchLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">

                    <com.apitechnosoft.ipad.component.ASTEditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:background="@drawable/border_layout_orange"
                        android:hint="Search..."
                        android:padding="@dimen/_3dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14dp" />

                    <com.apitechnosoft.ipad.component.ASTTextView
                        android:id="@+id/searchIcon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="ic"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/_18dp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@color/orange" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.apitechnosoft.ipad.component.ASTTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recent File"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recent_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginTop="@dimen/_5dp"
                android:background="@color/orange" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">

                    <com.apitechnosoft.ipad.component.ASTTextView
                        android:id="@+id/newFolder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ic"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/folder"
                        android:textSize="@dimen/_40dp" />

                    <com.apitechnosoft.ipad.component.ASTTextView
                        android:id="@+id/upFolder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:text="ic"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/folder"
                        android:textSize="@dimen/_40dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <com.apitechnosoft.ipad.component.ASTTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sort By"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/_14dp" />

                    <com.apitechnosoft.ipad.component.ASTTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:text="Newest"
                        android:background="@drawable/border_layout_orange"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:background="@color/orange" />

        <com.apitechnosoft.ipad.component.ASTTextView
            android:id="@+id/error_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_10dp"
            android:text="Admob"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />
    </LinearLayout>

</RelativeLayout>